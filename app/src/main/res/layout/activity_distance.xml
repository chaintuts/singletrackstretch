<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:text="0.00 km"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/distanceTextView"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="monospace"
        android:textSize="75sp"
        android:textIsSelectable="true"
        tools:textStyle="bold"
        android:textAlignment="center"
        tools:textColor="@android:color/black" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RadioButton
            android:text="kilometers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/kmRadioButton"
            android:fontFamily="monospace"
            android:textStyle="normal|bold"
            android:checked="true"
            android:layout_weight="1" />

        <RadioButton
            android:text="miles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/miRadioButton"
            android:fontFamily="monospace"
            android:textStyle="normal|bold"
            android:layout_weight="1" />
    </RadioGroup>

    <Button
        android:text="Start"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:textSize="24sp"
        android:onClick="startTracking"/>

    <Button
        android:text="Stop"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:textSize="24sp"
        android:onClick="stopTracking"/>

    <Button
        android:text="Reset"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:textSize="24sp"
        android:onClick="resetTracking" />

    <TextView
        android:text="No location data available"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/currentLocationTextView"
        android:layout_marginTop="20dp"
        android:fontFamily="monospace"
        android:textSize="14sp"
        android:textIsSelectable="true"
        tools:textStyle="bold"
        android:textAlignment="center"
        tools:textColor="@android:color/black" />

</LinearLayout>
